<% @incidents.each do |incident| %>
  <div class='col-xs-12 col-sm-8 col-md-6 col-lg-4 incident'> 
    <p><span class='bold'>Title: </span><%= incident.title %> </p>
    <p><span class='bold'>Description: </span><%= incident.description %> </p>
    <p><span class='bold'>Severity: </span><%= incident.severity %> </p>
    <p><span class='bold'>Location: </span><%= incident.location %> </p>
    <div class='btn-group btn-group-sm'>
      <%= button_to('Show', incident, :class => 'btn btn-default') %>
      <%= button_to('Edit', edit_incident_path(incident), :class => 'btn btn-default', :method => :get) %>
      <%= button_to('Mark Closed', incident, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default') %>


