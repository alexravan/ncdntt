<% content_for :title, @incident.title %>

<!-- <p id="notice"><%= notice %></p> -->

<div class = 'col-xs-12 col-sm-10 col-md-6'>
  <p>
    <strong>submitted by id:</strong>
    <%= @incident.user_id %>
  </p>

  <p>
    <strong>submitted by email:</strong>
    <%= @incident.user.email %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= @incident.category.name%>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @incident.description %>
  </p>

  <p>
    <strong>Severity:</strong>
    <%= @incident.severity %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @incident.location %>
  </p>

  <p>
    <strong>Time Reported:</strong>
    <%= @incident.created_at %>
  </p>

  <% if @incident.media.url(:square) != '/media/square/missing.png' %>
  <p>
    <strong>Media:</strong>
    <br/>
   <img src=" <%= @incident.media.url(:square) %>">
  </p>
  <%end%>
