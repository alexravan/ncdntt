<p id="notice"><%= notice %></p>

<h1>Listing Incidents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Category</th>
      <th>Description</th>
      <th>Severity</th>
      <th>Location</th>
      <th>Is closed</th>
      <th>Date closed</th>
      <th>Closing comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidents.each do |incident| %>
      <tr>
        <td><%= incident.title %></td>
        <td><%= incident.user_id %></td>
        <td><%= incident.category %></td>
        <td><%= incident.description %></td>
        <td><%= incident.severity %></td>
        <td><%= incident.location %></td>
        <td><%= incident.is_closed %></td>
        <td><%= incident.date_closed %></td>
        <td><%= incident.closing_comment %></td>
        <td><%= link_to 'Show', incident %></td>
        <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
        <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

